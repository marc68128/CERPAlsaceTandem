<Window x:Class="CERPAlsaceTandem.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CERPAlsaceTandem"
        mc:Ignorable="d"
        Title="Transfert en cours" Height="200" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Margin="5">Progression total :</TextBlock>
            <ProgressBar Margin="5" x:Name="TotalProgressBar" Value="0" Maximum="100"></ProgressBar>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Margin="5" x:Name="FileText"></TextBlock>
            <ProgressBar Margin="5" x:Name="FileProgressBar" Value="0" Maximum="100"></ProgressBar>
        </StackPanel>
    </Grid>
</Window>
