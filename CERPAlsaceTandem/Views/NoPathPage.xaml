<Page x:Class="CERPAlsaceTandem.Views.NoPathPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CERPAlsaceTandem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="80"
      Title="NoPathPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Margin="20" FontSize="13" TextAlignment="Justify" TextWrapping="Wrap">
                Veuillez renseigner un dossier principal dans les paramètres pour commencer à utiliser l'application.
            </TextBlock>
            <Button Content="Paramètres" HorizontalAlignment="Center" Margin="20,0" Click="SettingsClick"></Button>
        </StackPanel>
    </Grid>
</Page>
